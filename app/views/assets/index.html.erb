<% title "Assets" %>

<div id="assets">
  <%= render @assets if @assets %>
</div>
<div class="clear"></div>

<table>
  <tr>
    <th>Uploaded Files</th>
  </tr>
  <% for asset in @assets %>
    <tr>
      <td><%= link_to asset.uploaded_file_file_name, :controller => :assets, :action => :get, :target => :_blank %></td>
      <td><%= link_to "Show", asset %></td>
      <td><%= link_to "Edit", edit_asset_path(asset) %></td>
      <td><%= link_to "Destroy", asset, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Asset", new_asset_path %></p>


<%= s3_uploader_form post: download_url, as: "asset[asset_url]" do %>
  <%= file_field_tag :file, multiple: true %>
<% end %>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>
